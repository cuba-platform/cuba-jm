<app-component xmlns="http://schemas.haulmont.com/cuba/app-component.xsd"
               dependsOn="com.haulmont.cuba">
    <module blocks="*"
            name="global">
        <artifact appJar="true"
                  name="cuba-jm-test-global"/>
    </module>
    <module blocks="core"
            dependsOn="global,jm"
            name="core">
        <artifact appJar="true"
                  name="cuba-jm-test-core"/>
        <artifact name="javamelody-core"
                  appJar="true"
                  library="true"/>
        <property name="cuba.springContextConfig"
                  value="+com/haulmont/addon/cubajm/spring.xml"/>
        <property name="cubajm.monitoringUrl"
                  value="/core-jm/"/>
        <property name="cubajm.nodeNames"
                  value="web, core"/>
    </module>
    <module blocks="web"
            dependsOn="global,jm"
            name="web">
        <artifact appJar="true"
                  name="cuba-jm-test-web"/>
        <artifact classifier="web"
                  configuration="webcontent"
                  ext="zip"
                  name="cuba-jm-test-web"/>
        <artifact name="javamelody-core"
                  appJar="true"
                  library="true"/>
        <property name="cuba.springContextConfig"
                  value="+com/haulmont/addon/cubajm/web-spring.xml"/>
        <property name="cuba.dispatcherSpringContextConfig"
                  value="+com/haulmont/addon/cubajm/web-dispatcher-spring.xml"/>
        <property name="cubajm.monitoringUrl"
                  value="/web-jm/"/>
    </module>
    <module name="jm" dependsOn="global" blocks="web,desktop">
        <artifact name="cuba-jm-test-jm"
                  appJar="true"/>
        <property name="cubajm.authorizedUserLogin" value="admin"/>
        <property name="cubajm.authorizedUserPassword" value="admin"/>
    </module>
</app-component>
